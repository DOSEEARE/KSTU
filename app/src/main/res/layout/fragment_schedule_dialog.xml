<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/dark_bg"
    tools:context=".ui.schedule.ScheduleDialogFragment">

    <View
        android:id="@+id/schedule_bs_view"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/ic_bottomsh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/schedule_bs_time"
        android:layout_width="103dp"
        android:layout_height="36dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_schedule_time"
        android:gravity="center"
        android:text="13:00-14:20"
        android:textColor="@color/whiteColor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/schedule_bs_online"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginHorizontal"
        android:text="@string/online"
        android:textColor="@color/whiteColor"
        app:layout_constraintBottom_toBottomOf="@id/schedule_bs_time"
        app:layout_constraintStart_toEndOf="@id/schedule_bs_time"
        app:layout_constraintTop_toTopOf="@id/schedule_bs_time" />

    <TextView
        android:id="@+id/schedule_bs_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginHorizontal"
        android:layout_marginTop="@dimen/marginHorizontal"
        android:textColor="@color/whiteColor"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@id/schedule_bs_time"
        tools:text="Сети и телекоммуникации [1-8]" />

    <TextView
        android:id="@+id/schedule_bs_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginHorizontal"
        android:layout_marginTop="6dp"
        android:textColor="@color/whiteColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/schedule_bs_name"
        tools:text="Практика" />

    <TextView
        android:id="@+id/schedule_bs_auditory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/marginHorizontal"
        android:layout_marginTop="@dimen/marginHorizontal"
        android:text="Корпус: 2, аудитория 02"
        android:textColor="@color/whiteColor"
        app:layout_constraintTop_toBottomOf="@id/schedule_bs_type" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="278dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginHorizontal="@dimen/marginHorizontal"
        android:layout_marginTop="@dimen/marginHorizontal"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toBottomOf="@id/schedule_bs_auditory">

        <ImageView
            android:id="@+id/schedule_bs_imageview"
            android:layout_width="match_parent"
            android:src="@drawable/image_2c"
            android:layout_height="match_parent" />

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>