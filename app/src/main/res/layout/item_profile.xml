<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginHorizontal="@dimen/marginHorizontal"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:background="@drawable/bg_schedule_dark">


    <LinearLayout
        android:id="@+id/profile_const"
        android:layout_width="88dp"
        android:layout_height="105dp"
        android:background="@drawable/bg_schedule_blue"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/profile_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/whiteColor"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="1 Курс" />
    </LinearLayout>

    <TextView
        android:id="@+id/profile_contract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textColor="@color/whiteColor"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/profile_const"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Контракт: 27 000" />

    <TextView
        android:id="@+id/profile_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textColor="@color/whiteColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/profile_debt"
        app:layout_constraintStart_toEndOf="@id/profile_const"
        app:layout_constraintTop_toBottomOf="@id/profile_contract"
        tools:text="Оплачено: 27 000" />

    <TextView
        android:id="@+id/profile_debt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textColor="@color/whiteColor"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/profile_const"
        tools:text="Долг: 27 000" />

    <TextView
        android:id="@+id/profile_precent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textColor="@color/whiteColor"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/profile_pay"
        app:layout_constraintBottom_toBottomOf="@id/profile_pay"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="@dimen/marginHorizontal"
        tools:text="100%" />

</androidx.constraintlayout.widget.ConstraintLayout>