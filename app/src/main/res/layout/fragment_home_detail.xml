<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    tools:context=".ui.home.HomeDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/home_detail_vp"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:background="@drawable/test_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/home_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginHorizontal"
            android:text="20.05.2019"
            android:textColor="@color/whiteColor"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/home_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginHorizontal"
            android:text="@string/test_title"
            android:textColor="@color/whiteColor"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/home_detail_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/marginHorizontal"
            android:layout_marginTop="@dimen/marginHorizontal"
            android:layout_marginBottom="@dimen/marginHorizontal"
            android:text="@string/test_content"
            android:textColor="@color/whiteColor"
            android:textSize="18sp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>